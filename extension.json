	},
	"SpecialPages": {
		"BSSearchCenter": "BS\\ExtendedSearch\\MediaWiki\\Specials\\SearchCenter",
		"BSSearchAdmin": "BS\\ExtendedSearch\\MediaWiki\\Specials\\SearchAdmin"
	},
	"APIModules": {
		"bs-extendedsearch-query": "BS\\ExtendedSearch\\MediaWiki\\Api\\Query",
